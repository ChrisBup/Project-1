<!DOCTYPE html>
<html>
<head>
  <title>CuratorsApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <div class='nav'>
    <%= link_to "Curators", curators_path %>
    <%= link_to "Become a Curator", new_curator_path %>
    </div>
  </header>
  <div>
  <h1>
    <%= flash.now[:alert] %>
  </h1>
  <h1>
    <%= flash.now[:notice] %>
  </h1>
  </div>
  <div class='container'>
    <%= yield %>
  </div>
</body>
</html>
