<h1>SEARCH RESULTS</h1>
<h2><%= @artworks.count %>. LUCKY GUY!</h2>
<ul>
  <% @artworks.each do |art| %>
    <li>
      <div class='eight columns'>
        <img src="<%= @image_url %>" alt="<%= @title %>">
        <p><%= art.title %></p>
        <p><%= art.object_date %></p>
        <p><%= art.medium %></p>
        <p><%= art.label %></p>
        <p><%= art.description %></p>
        <p><%= art.bk_uri %></p>

      </div>
      <%= form_for @artwork do |f| %>
      <%= f.hidden_field :caption, value: art.title %>
      <%= f.hidden_field :image_url, value: art.bk_uri %>
      <%= f.submit "ADD TO YOUR COLLECTION" %>
      <% end %>
    </li>
  <% end %>
</ul>
